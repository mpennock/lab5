<%- include ../partials/header.ejs %>

<main class="container">
	<h1>Login</h1>
	
	<% if (messages.length > 0) { %>
		<div class="alert alert-danger"><%= messages %></div>
	<% } %>
	<form method="post" action="/auth/login">
		<fieldset>
			<label for="username" class="col-sm-2">Username: </label>
			<input type="text" name="username" id="username" required>
		</fieldset>
		<fieldset>
			<label for="password" class="col-sm-2">Password: </label>
			<input type="password" name="password" id="password" required>
		</fieldset>
		
		<button class="btn btn-primary col-sm-2">Login</button>
		<a href="/auth/github" title="login with github">
			<img src="/images/github.png" alt="github login">
		</a>
	</form>
	<hr>
	<p>Need an account? <a href="/auth/register" title="register">Register</a></p>
</main>

<%- include ../partials/footer.ejs %>